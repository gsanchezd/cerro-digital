---

const { title, cardOne, cardTwo, cardThree } = Astro.props;
---

<section class="text-[var(--color-base)] h-full mt-10 lg:mt-0">
  <h3 class="text-2xl lg:text-3xl font-bold text-center lg:text-left">{title}</h3>
  <div class="pl-4 pt-8 lg:w-md">
    <div class="flex flex-col justify-center gap-6 lg:gap-10 items-center">
      <div
        class="px-6 py-4 flex flex-col min-w-[300px] justify-center w-full border-l-2 border-[var(--color-primary)]"
      >
        <span class="text-2xl font-bold">{cardOne}</span>
        <span>desde agosto a noviembre</span>
      </div>
      <div
        class="px-6 py-4 flex flex-col min-w-[300px] justify-center w-full border-l-2 border-[var(--color-primary)]"
      >
        <span class="text-2xl font-bold">{cardTwo}</span>
      </div>
      <div
        class="px-6 py-4 flex flex-col min-w-[300px] justify-center w-full border-l-2 border-[var(--color-primary)]"
      >
        <span class="text-2xl font-bold">{cardThree}</span>
      </div>
    </div>
  </div>
</section>
